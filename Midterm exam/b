
#include<stdio.h>
int main()
{
    int a, b, i, c;
    for(i=1; i<=5; i++)
        c = c * 2;

    printf("2**5= : %d", c);
    return 0;
}

#include<stdio.h>
int main()
{
    int a, b,i, c;

    c = 1;
    i = 1;
    while(i <= 5)
    {
        c = c * 2;
        i++;
    }
    printf("Power : %d", c);
    return 0;
}

