 #include <stdio.h>

int c(int a, int cR);

int main()
{
    int a=2, cR=5, r;

 
    r = c(a,cR);

    printf("%d**%d = %d", a, cR, r);
    return 0;
}

int c(int a, int cR)
{
    if (cR != 0)
        return (a*c(a, cR-1));
    else
        return 1;
}
