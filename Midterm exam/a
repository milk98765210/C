
#include <stdio.h>
#include <math.h>
 
int main()
{
     int a;
     int sum = 0;

     sum = (401 * (2 * 1 + (401 - 1)* 4 ))/ 2;
       for (a = 1; a <= 401; a = a + 4 )
     {
          if (a != 401)
               printf("%d + ", a);
          else
               printf("%d = %d ", a, sum);
     }
     return 0;
}
